---
import Layout from '../layouts/Layout.astro';

import AboutMe from '../components/AboutMe.astro';

import Briefcase from '../components/icons/Briefcase.astro';
import Card from '../components/Card.astro';
import Code from '../components/icons/Code.astro';
import Experience from '../components/Experience.astro';
import Github from '../components/icons/Github.astro';
import Gmail from '../components/icons/Gmail.astro';
import LinkedIn from '../components/icons/LinkedIn.astro';
import ProfileCode from '../components/icons/ProfileCode.astro';
import Projects from '../components/Projects.astro';
import SectionContainer from '../components/SectionContainer.astro';
import Hero from '../components/Hero.astro';


---

<Layout 
	title="Porfolio de Juan Bellenzier - Desarrollador y Programador Web"
	description="Contrata a Juan Bellenzier como desarrollador web. Conoce su experiencia y proyectos realizados."
	>
	<main class="px-4">	
		<SectionContainer class="py-16 md:py-36">
			<Hero>
				</slot>
		 	</Hero>
		</SectionContainer>

		<SectionContainer id="experiencia">
			<h2 class="text-3xl font-semibold text-white mb-6 flex gap-x-3 items-center"> 
				<Briefcase class="size-7" />Experiencia Laboral
			</h2>
			
			<Experience />	
		</SectionContainer>	

		<SectionContainer id="proyectos">
			<h2 class="text-3xl font-semibold text-white mb-6 flex gap-x-3 items-center"> 
				<Code class="size-8" />Proyectos
			</h2>
			<Projects />
			
		</SectionContainer>	

		<SectionContainer id="sobre-mi">
			<h2 class="text-3xl font-semibold text-white mb-6 flex gap-x-3 items-center"> 
				<ProfileCode class="size-7" />Sobre mi
			</h2>
			<AboutMe />
			
		</SectionContainer>	
	</main>
</Layout>
